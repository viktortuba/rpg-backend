							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.length > 0) {",
									"        const warrior = jsonData.find(c => c.name === 'Warrior');",
									"        if (warrior) {",
									"            pm.environment.set(\"warrior_class_id\", warrior.id);",
									"            console.log(\"Warrior Class ID saved:\", warrior.id);",
									"        }",
									"    }",
									"}"
								],
